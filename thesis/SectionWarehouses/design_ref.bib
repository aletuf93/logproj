file = {:D$\backslash$:/OneDrive - Alma Mater Studiorum Universit{\`{a}} di Bologna/ACADEMICS/[514]Dottorato/Literature/Mendeley/Guo, Yu, De Koster - 2016 - Impact of required storage space on storage policy performance in a unit-load warehouse.pdf:pdf},
issn = {1366588X},
