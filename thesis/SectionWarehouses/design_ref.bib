file = {:D$\backslash$:/OneDrive - Alma Mater Studiorum Universit{\`{a}} di Bologna/ACADEMICS/[514]Dottorato/Literature/Mendeley/van Gils et al. - 2017 - The use of time series forecasting in zone order picking systems to predict order pickers' workload.pdf:pdf},
