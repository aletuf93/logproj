journal = {International Journal of Production Research},
keywords = {case study,forecasting,operations planning,order picking management,workload balancing},
mendeley-groups = {01 WAREHOUSE/03 OperationalStrategy/03{\_}Picking/Manual},
number = {21},
pages = {6380--6393},
publisher = {Taylor {\&} Francis},
title = {{The use of time series forecasting in zone order picking systems to predict order pickers' workload}},
