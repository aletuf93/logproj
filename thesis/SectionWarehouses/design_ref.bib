isbn = {03608352},
issn = {03608352},
journal = {Computers and Industrial Engineering},
keywords = {Order picking,Pick-and-pass system,Storage assignment policy,Warehouse management},
mendeley-groups = {01 WAREHOUSE/03 OperationalStrategy/02{\_}Storage/03{\_}Assignment},
pages = {1--13},
publisher = {Elsevier Ltd},
title = {{A storage assignment heuristic method based on genetic algorithm for a pick-and-pass warehousing system}},
